<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFestivalActivity">

    <ImageButton
        android:id="@+id/addFestivalImageButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="179dp"
        android:contentDescription="TODO"
        android:onClick="addFestivalImageClick"
        app:layout_constraintBottom_toTopOf="@+id/addFestivalEndDateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039"
        app:srcCompat="@drawable/click_to_add_image" />

    <EditText
        android:id="@+id/addFestivalNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="23dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Name of Festival"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addFestivalImageButton"
        app:layout_constraintTop_toBottomOf="@+id/addFestivalImageButton" />

    <EditText
        android:id="@+id/addFestivalCityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addFestivalNameText"
        app:layout_constraintTop_toBottomOf="@+id/addFestivalNameText" />

    <EditText
        android:id="@+id/addFestivalStartDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Start Date"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/addFestivalCityText"
        app:layout_constraintTop_toBottomOf="@+id/addFestivalCityText" />

    <EditText
        android:id="@+id/addFestivalEndDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="End Date"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/addFestivalPhoneText"
        app:layout_constraintStart_toStartOf="@+id/addFestivalStartDateText"
        app:layout_constraintTop_toBottomOf="@+id/addFestivalImageButton" />

    <EditText
        android:id="@+id/addFestivalPhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="14dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/addFestivalAboutText"
        app:layout_constraintEnd_toEndOf="@+id/addFestivalEndDateText"
        app:layout_constraintTop_toBottomOf="@+id/addFestivalEndDateText" />

    <EditText
        android:id="@+id/addFestivalAboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="About Festival"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addFestivalPhoneText"
        app:layout_constraintTop_toBottomOf="@+id/addFestivalPhoneText" />

    <Button
        android:id="@+id/addFestivalMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addFestivalMapClick"
        android:text="click here to add location"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="92dp" />

    <Button
        android:id="@+id/addFestivalSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addFestivalSaveClick"
        android:text="save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>