<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailLessonActivity">

    <TextView
        android:id="@+id/detailAboutLectureView"
        android:layout_width="252dp"
        android:layout_height="233dp"
        android:layout_marginStart="76dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailLessonPhoneView" />

    <TextView
        android:id="@+id/detailLessonPhoneView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/detailAboutLectureView"
        app:layout_constraintStart_toStartOf="@+id/detailAboutLectureView"
        app:layout_constraintTop_toBottomOf="@+id/detailLessonInstructorsView" />

    <TextView
        android:id="@+id/detailLessonInstructorsView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/detailLessonPhoneView"
        app:layout_constraintStart_toStartOf="@+id/detailLessonPhoneView"
        app:layout_constraintTop_toBottomOf="@+id/detailLessonNameView" />

    <TextView
        android:id="@+id/detailLessonNameView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/detailLessonInstructorsView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detailLessonInstructorsView"
        app:layout_constraintTop_toBottomOf="@+id/detailLessonImageView" />

    <fragment
        android:id="@+id/mapDetailLessonView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".DetailLessonActivity" />

    <ImageView
        android:id="@+id/detailLessonImageView"
        android:layout_width="300dp"
        android:layout_height="109dp"
        android:layout_marginStart="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>